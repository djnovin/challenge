@model IEnumerable<System.IO.FileInfo>

<div class="mb-10 overflow-hidden rounded-lg border-gray-300 border flex flex-col gap-8">
    <video id="videoPlayer" class="w-full" controls></video>
</div>
<table class="min-w-full bg-white border-collapse">
    <thead>
        <tr hover:bg-gray-100>
            <th class="py-2 px-4 border-b-2 border-gray-200 bg-white text-left leading-4 text-gray-600 tracking-wider">
                Filename</th>
            <th class="py-2 px-4 border-b-2 border-gray-200 text-left leading-4 text-gray-600 tracking-wider">
                Size (KB)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var file in Model)
        {
            <tr class="hover:bg-gray-100">
                <td class="py-2 px-4 border-b border-gray-200">
                    <button class="text-gray-500 hover:text-gray-700" onclick="playVideo('@file.Name')">@file.Name</button>
                </td>
                <td class="py-2 px-4 border-b border-gray-200">@(@file.Length / 1024)</td>
            </tr>
        }
    </tbody>
</table>

<script>
    function playVideo(filename) {
        const videoPlayer = document.getElementById('videoPlayer');
        videoPlayer.src = `/media/${filename}`;
        videoPlayer.load();
        videoPlayer.play();
    }
</script>
